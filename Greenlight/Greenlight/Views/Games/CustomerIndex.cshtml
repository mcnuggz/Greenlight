@model IEnumerable<Greenlight.Models.Game>

@{
    ViewBag.Title = "Index";
}

<h2>Browse</h2>
<p>To purchase games, please log in</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>
    <button href="@Url.Action()"></button>

    @foreach (var item in Model)
    {
        var coverArt = Url.Content("~/Images/" + Html.DisplayFor(modelItem => item.ImagePath));
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <img src="@coverArt" width="120" height="120" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <p>@Html.ActionLink("Details", "CustomerDetails", new { id = item.ID })</p>
                <p><a href="@item.Demo" download>Download Demo</a></p>
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Add to Cart", "AddToCart", "ShoppingCart", new { id = item.ID}, "")
                }

            </td>
        </tr>
    }

</table>
